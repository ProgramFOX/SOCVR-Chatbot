<Window x:Class="CVChatbot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Bot" Height="108" Width="213" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnStart" Content="Start Bot" Margin="10,10,0,0" HorizontalAlignment="Left" Width="75" Height="25" VerticalAlignment="Top" RenderTransformOrigin="0.68,0.4" Click="btnStart_Click"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="29,40,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCurrentStatus" Content="&lt;current status&gt;" HorizontalAlignment="Left" Margin="76,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOpenLogFile" Content="Open Log File" Margin="90,10,0,0" HorizontalAlignment="Left" Width="102" Height="25" VerticalAlignment="Top" RenderTransformOrigin="0.68,0.4" Click="btnOpenLogFile_Click"/>

    </Grid>
</Window>